<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tt_widget_bg"
    android:id="@+id/tt_widget"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/dienstapp_icon_nobckgrnd"
        android:tint="@color/widget_icon_color" />

    <LinearLayout
        android:id="@+id/ttw_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <TextView
            android:id="@+id/ttw_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="right|end"
            android:text="Montag, 12. April"
            android:textColor="@color/widget_text_top"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/ttw_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/ttw_1"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="TESTTESTTESTTESTTESTTESTTESTTESTTESTTESTTESTTEST"
        android:textColor="@color/widget_text"
        android:textSize="18sp" />

</RelativeLayout>