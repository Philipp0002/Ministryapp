<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_bericht_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="@color/report_card_color"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/bericht_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans"
                android:text="@string/total"
                android:textAllCaps="true"
                android:textColor="@color/list_bericht_date"
                android:textStyle="normal|bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:weightSum="1">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.7"
                    android:background="#66FFFFFF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bericht_date"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bericht_stunden_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:text="@string/title_activity_hours"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="14sp"
                    android:autoSizeStepGranularity="1sp"
                    android:maxLines="1"
                    android:textColor="@color/list_bericht_info"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:text="@string/title_activity_placements"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="14sp"
                    android:autoSizeStepGranularity="1sp"
                    android:maxLines="1"
                    android:textColor="@color/list_bericht_info"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:text="@string/title_activity_return_visits"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="14sp"
                    android:autoSizeStepGranularity="1sp"
                    android:maxLines="1"
                    android:textColor="@color/list_bericht_info"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:text="@string/title_activity_videos"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="14sp"
                    android:autoSizeStepGranularity="1sp"
                    android:maxLines="1"
                    android:textColor="@color/list_bericht_info"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:text="@string/title_activity_studies"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="14sp"
                    android:autoSizeStepGranularity="1sp"
                    android:maxLines="1"
                    android:textColor="@color/list_bericht_info"
                    android:layout_weight="1" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/bericht_count_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bericht_stunden_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/list_bericht_data"
                    android:textSize="36sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="24sp"
                    android:autoSizeMaxTextSize="36sp"
                    android:autoSizeStepGranularity="1sp"
                    android:layout_weight="1"/>


                <TextView
                    android:id="@+id/bericht_brosch_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/list_bericht_data"
                    android:textSize="36sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="24sp"
                    android:autoSizeMaxTextSize="36sp"
                    android:autoSizeStepGranularity="1sp"
                    android:layout_weight="1" />


                <TextView
                    android:id="@+id/bericht_rueck_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/list_bericht_data"
                    android:textSize="36sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="24sp"
                    android:autoSizeMaxTextSize="36sp"
                    android:autoSizeStepGranularity="1sp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/bericht_videos_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/list_bericht_data"
                    android:textSize="36sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="24sp"
                    android:autoSizeMaxTextSize="36sp"
                    android:autoSizeStepGranularity="1sp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/bericht_studies_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/list_bericht_data"
                    android:textSize="36sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="24sp"
                    android:autoSizeMaxTextSize="36sp"
                    android:autoSizeStepGranularity="1sp"
                    android:layout_weight="1"/>


            </LinearLayout>


            <TextView
                android:id="@+id/bericht_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bericht_count_line"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:paddingBottom="6dp"
                android:text="DESC"
                android:textColor="@color/list_bericht_date"
                android:textColorLink="@color/list_bericht_date"
                android:textStyle="normal"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>