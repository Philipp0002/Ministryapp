<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_bericht_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="@color/report_card_color"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.percentlayout.widget.PercentFrameLayout
                android:id="@+id/bericht_info_line"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bericht_date"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <com.lb.auto_fit_textview.AutoResizeTextView
                    android:id="@+id/bericht_stunden_info"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/title_activity_hours"
                    android:textColor="@color/list_bericht_info"
                    app:layout_widthPercent="20%" />


                <com.lb.auto_fit_textview.AutoResizeTextView
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/title_activity_placements"
                    android:textColor="@color/list_bericht_info"
                    app:layout_marginLeftPercent="20%"
                    app:layout_widthPercent="20%" />


                <com.lb.auto_fit_textview.AutoResizeTextView
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/title_activity_return_visits"
                    android:textColor="@color/list_bericht_info"
                    app:layout_marginLeftPercent="40%"
                    app:layout_widthPercent="20%" />

                <com.lb.auto_fit_textview.AutoResizeTextView
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/title_activity_videos"
                    android:textColor="@color/list_bericht_info"
                    app:layout_marginLeftPercent="60%"
                    app:layout_widthPercent="20%" />

                <com.lb.auto_fit_textview.AutoResizeTextView
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/title_activity_studies"
                    android:textColor="@color/list_bericht_info"
                    app:layout_marginLeftPercent="80%"
                    app:layout_widthPercent="20%" />


            </androidx.percentlayout.widget.PercentFrameLayout>

            <androidx.percentlayout.widget.PercentFrameLayout
                android:id="@+id/bericht_count_line"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bericht_info_line"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <com.lb.auto_fit_textview.AutoResizeTextView
                    android:id="@+id/bericht_stunden_count"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/list_bericht_data"
                    android:textSize="36sp"
                    app:layout_widthPercent="20%" />


                <com.lb.auto_fit_textview.AutoResizeTextView
                    android:id="@+id/bericht_brosch_count"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/list_bericht_data"
                    android:textSize="36sp"
                    app:layout_marginLeftPercent="20%"
                    app:layout_widthPercent="20%" />


                <com.lb.auto_fit_textview.AutoResizeTextView
                    android:id="@+id/bericht_rueck_count"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/list_bericht_data"
                    android:textSize="36sp"
                    app:layout_marginLeftPercent="40%"
                    app:layout_widthPercent="20%" />

                <com.lb.auto_fit_textview.AutoResizeTextView
                    android:id="@+id/bericht_videos_count"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/list_bericht_data"
                    android:textSize="36sp"
                    app:layout_marginLeftPercent="60%"
                    app:layout_widthPercent="20%" />

                <com.lb.auto_fit_textview.AutoResizeTextView
                    android:id="@+id/bericht_studies_count"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/list_bericht_data"
                    android:textSize="36sp"
                    app:layout_marginLeftPercent="80%"
                    app:layout_widthPercent="20%" />


            </androidx.percentlayout.widget.PercentFrameLayout>

            <TextView
                android:id="@+id/bericht_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bericht_count_line"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="6dp"
                android:text="DESC"
                android:textColor="@color/list_bericht_date"
                android:textColorLink="@color/list_bericht_date"
                android:textStyle="normal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/bericht_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/open_sans"
                android:text="@string/total"
                android:textColor="@color/list_bericht_date"
                android:textStyle="normal|bold" />


            <androidx.percentlayout.widget.PercentFrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/bericht_date"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <View
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"
                    app:layout_marginLeftPercent="15%"
                    app:layout_widthPercent="70%" />


            </androidx.percentlayout.widget.PercentFrameLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>